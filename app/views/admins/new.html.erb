<div>
  <h1>Novo Administrador</h1>

  <% if @errors.present? %>
    <div>
      <ul>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @admin, url: admins_path do |f| %>
    <div class="mb-4">
      <%= f.label :email %>
      <%= f.email_field :email, required: true %>
    </div>

    <div class="mb-4">
      <%= f.label :password %>
      <%= f.password_field :password, required: true %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, required: true %>
    </div>

    <div>
      <%= f.submit "Criar Administrador" %>
      <%= link_to "Cancelar", admins_path %>
    </div>
  <% end %>
</div>
