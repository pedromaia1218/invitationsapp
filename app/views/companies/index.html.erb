<h1>Empresas</h1>

<%= link_to 'Nova Empresa', new_company_path %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>CNPJ</th>
      <th>Endereço</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.cnpj %></td>
        <td><%= company.address %></td>
        <td><%= company.active? ? 'Ativo' : 'Inativo' %></td>
        <td>
          <%= link_to 'Editar', edit_company_path(company) %>
          <%= button_to 'Excluir', company_path(company), method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @companies %>
